<% include ./partials/header.ejs%>
<div class="container">

    <div class="row"><h2>Change Password</h2></div>

<form method="post" class="col-md-4 col-sm-12">
    <%if(query.error){ if (query.error==401){%>
        <div class="row"> <div class="alert alert-danger col-md-4 col-sm-12 " role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only"></span>
            Wrong Password!
        </div></div>
    <%} else{ %> <div class="row"><div class="alert alert-danger col-md-4 col-sm-12 " role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only"></span>
        New Password and Confirm Passwrod does not Match!
            </div></div>
    <%}}%>
    <div class="form-group">
        <div class="row"><label for="oldPassword">Old Password</label></div>
        <div class="row"><input  type="password" class="col-md-4 col-sm-12 form-control" name="oldPassword"></div>
    </div>
    <div class="form-group">
        <div class="row"><label for="newPassword">New Password</label></div>
        <div class="row"><input type="password" class="form-control col-md-4 col-sm-12 " name="newPassword"></div>
    </div>
    <div class="form-group">
        <div class="row"><label for="confirmPassword">Confirm Password</label></div>
        <div class="row"><input type="password" class="form-control col-md-4 col-sm-12 " name="confirmPassword"></div>
    </div>


    <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>

<%include ./partials/footer.ejs%>
